@model Restaurant.Data.Model.Category

@{
    ViewData["Title"] = "Детайли";
}

<h1>Детайли на категорията</h1>

<form asp-action="Details" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">

            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn  btn-primary">Редактирай</a>
            <a asp-action="Index" class="btn btn-success">Обратно към списъка</a>
            @*<input type="submit" class="btn btn-success" value="Back to List" />*@
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
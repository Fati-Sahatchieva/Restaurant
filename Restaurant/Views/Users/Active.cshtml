@model Restaurant.Models.User
@using Restaurant.Models
@{ ViewData["Title"] = "Edit"; }
<br />

<h2 class="text-info">Редактирай потребителя</h2>
<form asp-action="Active" method="post" id="user-form" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <h3>@ViewBag.message</h3>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserName"></label>
            </div>
            <div class="col-5">
                <input asp-for="UserName" class="form-control" readonly="readonly" />
            </div>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="FirstName"></label>
            </div>
            <div class="col-5">
                <input asp-for="FirstName" class="form-control" readonly="readonly" />
            </div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LastName"></label>
            </div>
            <div class="col-5">
                <input asp-for="LastName" class="form-control" readonly="readonly" />
            </div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Активен" />

            <a asp-action="Index" class="btn btn-success">Обратно към списъка</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>$(document).ready(function () {
        $("#user-form").validate({
    rules: {
      UserName : {
        required: true,
             },
      PasswordHash : {
        required: true,
             }
            },
            messages: {
                Username: "Попълни полето с Потребителско име",
                PasswordHash: "Попълни полето с Парола"
            }

  });
    });</script>
}

